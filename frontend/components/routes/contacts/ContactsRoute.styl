.ContactsRoute
	padding: 10px;
	height: 100%;
	width: 100%;
	box-sizing: border-box;
	.ContactsRoute-content
		background-color: $color.white;
		border: 1px solid $color.main;
		height: 100%;
		display: flex;
		flex-direction: column;
	.ContactsRoute-table-header
		border-bottom: 1px solid $color.main;
		overflow-y: scroll;
		display: flex;
		flex-shrink: 0;
	.ContactsRoute-create-contact-button
		padding: 12px 12px 12px 37px;
		height: 100%;
		cursor: pointer;
		font-size: 1rem;
		font-weight: bold;
		border-right: 1px solid $color.main;
		background-image: $icon.plus;
		background-repeat: no-repeat;
		background-size: 20px;
		background-position: 10px center;
		box-sizing: border-box;
		&:hover
			background-color: alpha($color.main, 0.1);
	.ContactsRoute-generate-randoms
		padding: 12px 12px 12px 37px;
		cursor: pointer;
		font-size: 1rem;
		font-weight: bold;
		border-left: 1px solid $color.main;
		background-repeat: no-repeat;
		background-size: 20px;
		background-position: 10px center;
		background-image: $icon.generate;
		box-sizing: border-box;
		&:hover
			background-color: alpha($color.main, 0.1);
	.ContactsRoute-column-header
		height: 100%;
		box-sizing: border-box;
		&:not(:last-child)
			border-right: 1px solid alpha($color.main, 0.1);
	.ContactsRoute-empty-stub
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translateX(-50%) translateY(-50%);
		color: gray;
		font-size: 1rem;
	.ContactsRoute-contact
		overflow: hidden;
		border-bottom: 1px solid alpha($color.main, 0.1);
		cursor: pointer;
		display: flex;
		&:hover
			background-color: alpha($color.main, 0.1);
	.ContactsRoute-column
		padding: 5px;
		box-sizing: border-box;
		&:not(:last-child)
			border-right: 1px solid alpha($color.main, 0.1);
	.ContactsRoute-footer
		overflow-y: scroll;
		display: flex;
		flex-shrink: 0;
	.ContactsRoute-contacts-list
		flex-grow: 1;
		border-bottom: 1px solid $color.main;
		overflow-y: scroll;
	.ContactsRoute-sorter
		width: 28px;
		cursor: pointer;
		background-image: $icon.sort-dark;
		background-repeat: no-repeat;
		background-position: center;
		background-size: 15px;
		&.asc
			transform: rotate(180deg);
			border-right: 1px solid alpha($color.main, 0.1);
		&.desc
			border-left: 1px solid alpha($color.main, 0.1);
		&.active
			background-color: $color.main;
			background-image: $icon.sort-white;
			cursor: default;
		&:hover:not(.active)
			background-color: alpha($color.main, 0.1);
	.ContactsRoute-filter-input
		left: 0;
		width: 100%;
		border: none;
		border-top: 1px solid alpha($color.main, 0.1);
		outline: none;
		padding: 5px;
		font-size: 1rem;
		display: block;
		box-sizing: border-box;
		&.disabled
			background: $color.disabled;
	.ContactsRoute-row
		display: flex;
	.ContactsRoute-header-text
		font-weight: bold;
		padding: 4px;
		flex-grow: 1;
	.ContactsRoute-match
		font-weight: bold;
		background: $color.match;
	.ContactsRoute-stats
		padding-left: 10px;
		flex-grow: 1;
		display: flex;
		align-items: center;
	.ContactsRoute-contact-not-found
		padding: 10px;
	.ContactsRoute-column-header, .ContactsRoute-column
		&.id
			width: 5%;
			flex-shrink: 0;
		&.name
			width: 20%;
			flex-shrink: 0;
		&.phone
			width: 20%;
			flex-shrink: 0;
		&.comment
			width: 35%;
			flex-shrink: 0;
		&.date
			width: 20%;
			flex-shrink: 0;
